generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Auth models (NextAuth compatible)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials auth (hashed)
  accounts      Account[]
  sessions      Session[]
  players       Player[]
  games         Game[]    // Games created by this user
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Game models
model Player {
  id        String   @id @default(cuid())
  name      String
  userId    String?  // null for guest players
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  // Lifetime stats
  gamesPlayed    Int @default(0)
  gamesWon       Int @default(0)
  totalDarts     Int @default(0)
  totalPoints    Int @default(0)
  highestCheckout Int @default(0)
  ton80s         Int @default(0) // 180s hit
  
  gameParticipants GameParticipant[]
  throws           Throw[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Game {
  id        String     @id @default(cuid())
  mode      GameMode   @default(X01)
  status    GameStatus @default(IN_PROGRESS)
  
  // Owner (optional - guest games have no owner)
  userId    String?
  user      User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  // X01 settings
  startingScore Int?    // 301, 501, etc.
  doubleOut     Boolean @default(false)
  
  // Round the Clock settings
  rtcEndMode    RTCEndMode? // bullseye, twenty, ten
  
  winnerId      String?
  
  participants  GameParticipant[]
  rounds        Round[]
  
  startedAt     DateTime  @default(now())
  finishedAt    DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
}

model GameParticipant {
  id       String @id @default(cuid())
  gameId   String
  playerId String
  order    Int    // turn order (0, 1, 2...)
  
  // Running stats for this game
  currentScore  Int @default(0) // for X01: remaining score; for RTC: current target
  dartsThrown   Int @default(0)
  totalScored   Int @default(0)
  
  // Accuracy tracking
  singlesHit    Int @default(0)
  doublesHit    Int @default(0)
  triplesHit    Int @default(0)
  bullseyeHit   Int @default(0)
  outerBullHit  Int @default(0)
  misses        Int @default(0)
  
  game   Game   @relation(fields: [gameId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([gameId, playerId])
  @@index([gameId])
  @@index([playerId])
}

model Round {
  id         String @id @default(cuid())
  gameId     String
  roundNum   Int    // 1, 2, 3...
  
  game   Game    @relation(fields: [gameId], references: [id], onDelete: Cascade)
  throws Throw[]
  
  createdAt DateTime @default(now())

  @@unique([gameId, roundNum])
  @@index([gameId])
}

model Throw {
  id        String @id @default(cuid())
  roundId   String
  playerId  String
  throwNum  Int    // 1, 2, or 3 (dart number in the turn)
  
  segment   Int     // 1-20, 25 (outer bull), 50 (bullseye), 0 (miss)
  multiplier Int    @default(1) // 1=single, 2=double, 3=triple
  value     Int     // calculated: segment * multiplier
  
  // For RTC mode
  advancedBy Int?   // how many numbers advanced (1, 2, or 3)
  
  round  Round  @relation(fields: [roundId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@index([roundId])
  @@index([playerId])
}

enum GameMode {
  X01
  ROUND_THE_CLOCK
}

enum GameStatus {
  IN_PROGRESS
  COMPLETED
  ABANDONED
}

enum RTCEndMode {
  BULLSEYE
  TWENTY
  TEN
}
